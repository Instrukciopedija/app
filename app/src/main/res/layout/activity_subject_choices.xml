<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/grad_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/chivo_light"
            android:gravity="center_horizontal"
            android:text="Izaberite predmete"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_one"
            android:drawableTop="@drawable/ic_atom"
            app:backgroundTint="add"
            android:text="Fizika"
            android:textAllCaps="false"
            android:fontFamily="@font/chivo_regular"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_two"
            android:drawableTop="@drawable/ic_quill_drawing_a_line"
            app:backgroundTint="add"
            android:text="Lektire"
            android:textAllCaps="false"
            android:fontFamily="@font/chivo_regular"/>
    </LinearLayout>


</ScrollView>