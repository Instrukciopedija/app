<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg">


    <LinearLayout
        android:id="@+id/registracija_korisnika_layout"
        android:layout_width="282dp"
        android:layout_height="550dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:layout_marginRight="@dimen/height_58"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignStart="@+id/registracija_korisnika_layout"
            android:layout_alignEnd="@+id/registracija_korisnika_layout"
            android:layout_marginBottom="-58dp"
            android:background="@drawable/input_bg"
            android:elevation="5sp"
            android:padding="5dp"
            android:src="@drawable/ic_user"
            android:layout_alignLeft="@+id/registracija_korisnika_layout"
            android:layout_alignRight="@+id/registracija_korisnika_layout" />


        <EditText
            android:id="@+id/korisnicko_ime"
            android:layout_width="170dp"
            android:layout_height="@dimen/height_58"
            android:layout_gravity="right"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="16dp"
            android:elevation="5sp"
            android:fontFamily="@font/chivo_light"
            android:hint="Korisničko ime"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:textColorHint="#FF808080" />

        <EditText
            android:id="@+id/korisnicki_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:layout_marginTop="0dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:elevation="5sp"
            android:fontFamily="@font/chivo_light"
            android:hint="E-mail"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:textColorHint="#FF808080" />

        <EditText
            android:id="@+id/korisnicki_telefon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_phone_call"
            android:drawablePadding="16dp"
            android:elevation="5sp"
            android:fontFamily="@font/chivo_light"
            android:hint="Telefon"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:textColorHint="#FF808080" />

        <EditText
            android:id="@+id/korisnicka_lokacija"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_placeholder"
            android:drawablePadding="16dp"
            android:elevation="5sp"
            android:fontFamily="@font/chivo_light"
            android:hint="Lokacija"
            android:inputType="textPostalAddress"
            android:paddingLeft="16dp"
            android:textColorHint="#FF808080" />

        <EditText
            android:id="@+id/registriraj_se_kao_korisnik"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/ic_key"
            android:drawablePadding="16dp"
            android:elevation="5sp"
            android:fontFamily="@font/chivo_light"
            android:hint="Lozinka"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:textColor="#FF808080"


            android:textColorHint="#FF808080" />


        <Button
            android:id="@+id/button_reg_korisnik"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:layout_below="@+id/registracija_korisnika_layout"
            android:layout_alignStart="@+id/registracija_korisnika_layout"
            android:layout_alignEnd="@+id/registracija_korisnika_layout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/chivo_light"
            android:text="@string/reg__kao_korisnik_string"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:backgroundTint="#14000000"
            app:backgroundTintMode="add"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.42"
            android:layout_alignLeft="@+id/registracija_korisnika_layout"
            android:layout_alignRight="@+id/registracija_korisnika_layout" />

    </LinearLayout>

    <Button
        android:id="@+id/back_btn_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/ic_back"
        app:backgroundTint="#FFFFFF"
        tools:ignore="RtlHardcoded"
        />


    <TextView
        android:id="@+id/izradite_racun_za_kor"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="581dp"
        android:fontFamily="@font/chivo_light"
        android:gravity="center"
        android:text="Izradite korisnički račun"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        tools:ignore="HardcodedText,RtlHardcoded" />


</RelativeLayout>