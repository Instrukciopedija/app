<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".RegisterUserActivity">



    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180"
        android:background="@drawable/input_bg"
        android:src="@drawable/ic_user"
        android:padding="5dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_286"
        android:layout_marginLeft="@dimen/height_58"
        android:layout_marginRight="@dimen/height_58"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:layout_marginTop=""
            android:background="@drawable/input_bg"
            android:hint="E-mail"
            android:fontFamily="@font/chivo_light"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:inputType="text"
            android:elevation="5sp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_bg"
            android:hint="Telefon"
            android:fontFamily="@font/chivo_light"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_phone_call"
            android:drawablePadding="16dp"
            android:inputType="phone"
            android:elevation="5sp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_bg"
            android:hint="Lokacija"
            android:fontFamily="@font/chivo_light"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_placeholder"
            android:drawablePadding="16dp"
            android:inputType="textPostalAddress"
            android:elevation="5sp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_58"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_bg"
            android:hint="Lozinka"
            android:fontFamily="@font/chivo_light"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_key"
            android:drawablePadding="16dp"
            android:inputType="textPassword"
            android:elevation="5sp"




            />

    </LinearLayout>

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/ic_back"
        tools:ignore="RtlHardcoded" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="246dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="81dp"
        android:layout_marginRight="81dp"
        android:layout_marginBottom="523dp"
        android:fontFamily="@font/chivo_light"
        android:gravity="center"
        android:text="Izradite korisnički račun"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        android:id="@+id/button_regInstruktor"
        android:layout_width="242dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="83dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="87dp"
        android:layout_marginRight="87dp"
        android:layout_marginBottom="181dp"
        android:background="@drawable/custom_button"
        android:elevation="8sp"
        android:fontFamily="@font/chivo_light"
        android:text="@string/registriraj_se_kao_korisnik"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:translationZ="90dp"
        app:backgroundTint="#14000000"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42"
        tools:ignore="RtlHardcoded" />


    <Button
        android:id="@+id/btn_regUser"
        android:layout_width="275"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="577dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="98dp"
        android:background="@drawable/custom_button"
        android:elevation="5sp"
        android:fontFamily="@font/chivo_light"
        android:text="@string/registriraj_se_kao_korisnik"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="#14000000"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />


</RelativeLayout>